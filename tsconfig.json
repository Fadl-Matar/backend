{
  "compilerOptions": {
    // ğŸ“ Folder structure
    "rootDir": "./src",
    "outDir": "./dist",

    // ğŸ’» Runtime & modules
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    // ğŸ§¾ Output files
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // âœ… Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // âš ï¸ Recommended safety
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    // ğŸŒ Module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
